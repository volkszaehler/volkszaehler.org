<?xml version="1.0" encoding="utf-8" ?>
<phpunit bootstrap="./webserver/webserver.php">

  <php>
    <const name="WEB_SERVER_HOST" value="localhost" />
    <const name="WEB_SERVER_PORT" value="10880" />
    <const name="WEB_SERVER_DOCROOT" value="../htdocs" />
    <const name="HTTP_ROOT" value="http://localhost:10880/middleware.php/" />
  </php>

  <testsuites>
    <testsuite name="Volkszaehler">
      <directory suffix="Test.php">tests</directory>
    </testsuite>
  </testsuites>

  <!-- This is required for VPU to work correctly -->
  <listeners>
    <listener class="PHPUnit_Util_Log_JSON"></listener>
  </listeners>

</phpunit>
